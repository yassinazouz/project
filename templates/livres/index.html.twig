{% extends 'base.html.twig' %}

{% block title %}Nos Offers
{% endblock %}

{% block body %}
	<h1>Liste des Offers</h1>
	<table class="table">
		<tr>
			<th>Titre</th>
			<th>ISBN</th>
			<th>Editeur</th>
			<th>Date Edition</th>
			<th>Prix</th>
			<th>Cat√©gorie</th>
			<th colspan="3">Action</th>
		</tr>
		{% for livre in livres %}
			<tr>
				<td>{{livre.titre}}</td>
				<td>{{livre.ISBN}}</td>
				<td>{{livre.editeur}}</td>
				<td>{{livre.dateEdition|date('d-m-Y') }}</td>
				<td>{{livre.prix}}</td>
				<td>{{livre.categorie.libelle}}</td>
				<td>
					<a href="{{ path('app_admin_livres_show', {'id': livre.id}) }}" class="btn btn-primary btn-sm">Voir plus...</a>
				</td>
				<td>
					<a href="{{ path('app_admin_livres_delete', {'id': livre.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
				</td>
				<td>
					<a href="{{ path('app_admin_livres_update', {'id': livre.id}) }}" class="btn btn-success btn-sm">Editer</a>
				</td>
			</tr>

		{% endfor %}

	</table>

{% endblock %}

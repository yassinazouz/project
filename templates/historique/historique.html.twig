{% extends 'base.html.twig' %}



{% block title %}Order History{% endblock %}

{% block body %}
<div class="container mt-5">
<h1>Order History</h1>
</div>

{% if orders is empty %}
<div class="container mt-5">
    <p>You have no orders.</p>
    </div>
{% else %}
<div class="container mt-5">
    <table class="table">
        <thead>
            <tr>
                <th>Order Reference</th>
                <th>Date</th>
                <th>Book ID</th>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                {% for orderDetail in order.ordersDetails %}
                    <tr>
                        <td>{{ order.ref }}</td>
                        <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ orderDetail.livres.id }}</td>
                        <td>{{ orderDetail.livres.titre }}</td>
                        <td>{{ orderDetail.quantity }}</td>
                        <td>{{ orderDetail.price }}</td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
{% endblock %}
